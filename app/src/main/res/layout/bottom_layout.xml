<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:layout_alignParentBottom="true"
              android:background="@color/background"
              android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/id_bottom_home_imgbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_selected"/>

        <TextView
            android:id="@+id/id_bottom_home_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="首页"
            android:textColor="#8B8989"
            android:textSize="10sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_bottom_search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_selected"/>

        <TextView
            android:id="@+id/id_bottom_search_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="查快递"
            android:textColor="#8B8989"
            android:textSize="10sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/id_bottom_delivery_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delivery_selected"/>

        <TextView
            android:id="@+id/id_bottom_delivery_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寄快递"
            android:textColor="#000000"
            android:textSize="10sp"/>
    </LinearLayout>


</LinearLayout>